{
  "expo": {
    "name": "PCMI - Meet",
    "slug": "pcmi-meet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pcmi-meet",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false, 
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Camera access for video calls",
        "NSMicrophoneUsageDescription": "Microphone access for calls"
      }
    },
    "android": {
      "permissions": ["CAMERA", "RECORD_AUDIO", "INTERNET"]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "./plugins/withStreamAndroid.js"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}

